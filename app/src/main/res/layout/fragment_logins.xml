<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/facebookToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:text="@string/facebook_token"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_button" />

        <TextView
            android:id="@+id/isLoggedInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/facebook_is_logged_in"
            app:layout_constraintStart_toStartOf="@+id/facebookToken"
            app:layout_constraintTop_toBottomOf="@+id/facebookToken" />

        <ImageView
            android:id="@+id/isLoggedInImage"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:background="@android:color/holo_red_light"
            app:layout_constraintBottom_toBottomOf="@+id/isLoggedInLabel"
            app:layout_constraintStart_toEndOf="@+id/isLoggedInLabel"
            app:layout_constraintTop_toTopOf="@+id/isLoggedInLabel" />

        <Button
            android:id="@+id/checkFbStatusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/check_fb_status_button"
            app:layout_constraintStart_toStartOf="@+id/isLoggedInLabel"
            app:layout_constraintTop_toBottomOf="@+id/isLoggedInLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
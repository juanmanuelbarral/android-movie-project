<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/itemMoviePosterImage"
            android:background="#00BFFF" android:padding="2dp" android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="2dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/itemMovieTitleLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Movie Title"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/itemMoviePosterImage"
        app:layout_constraintStart_toStartOf="@+id/itemMoviePosterImage"
        app:layout_constraintTop_toBottomOf="@+id/itemMoviePosterImage" />
</android.support.constraint.ConstraintLayout>